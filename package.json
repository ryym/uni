{
  "name": "uni",
  "private": true,
  "version": "0.0.0",
  "author": "ryym <ryym.64@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently npm:vite npm:hcm",
    "vite": "vite",
    "emulator": "firebase emulators:start",
    "dev-connect": "CONNECT_FIREBASE=true vite",
    "build:dev": "tsc && CONNECT_FIREBASE=true vite build --mode development",
    "build:PROD": "tsc && vite build",
    "deploy:dev": "firebase --project default deploy",
    "deploy:PROD": "npm run build:PROD && firebase --project production deploy; rm -rf dist",
    "cards": "node scripts/cards.js",
    "test": "jest",
    "test:w": "jest --watch",
    "functions": "npm --prefix functions",
    "git:pre-commit": "lint-staged",
    "ui": "concurrently npm:storybook npm:hcm",
    "hcm": "hcm --watch src/**/*.module.css",
    "storybook": "storybook dev --port 6006 --no-open"
  },
  "dependencies": {
    "firebase": "^9.15.0",
    "jotai": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wouter": "^2.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@jest/globals": "^29.4.1",
    "@storybook/addon-essentials": "7.0.0-beta.58",
    "@storybook/react": "7.0.0-beta.58",
    "@storybook/react-vite": "7.0.0-beta.58",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^3.0.0",
    "babel-loader": "^8.3.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.11",
    "firebase-admin": "^11.4.1",
    "happy-css-modules": "^1.0.0",
    "husky": "^8.0.2",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "storybook": "^7.0.0-beta.58",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vite-plugin-full-reload": "^1.0.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
