{
  "name": "douno",
  "private": true,
  "version": "0.0.0",
  "author": "ryym <ryym.64@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently 'npm:dev:*'",
    "dev:vite": "vite",
    "dev:emulator": "node scripts/firebaseEmulator.js",
    "dev:hcm": "hcm --watch src/**/*.module.css",
    "dev-connect": "CONNECT_FIREBASE=true vite",
    "build:dev": "tsc && CONNECT_FIREBASE=true vite build --mode development",
    "build:PROD": "tsc && vite build",
    "deploy:dev": "firebase --project default deploy",
    "deploy:PROD": "npm run build:PROD && firebase --project production deploy; rm -rf dist",
    "adminops": "node scripts/adminOps.js",
    "git:pre-commit": "lint-staged"
  },
  "dependencies": {
    "firebase": "^9.15.0",
    "jotai": "^1.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wouter": "^2.9.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react": "^3.0.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-admin": "^11.4.1",
    "happy-css-modules": "^1.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vite-plugin-full-reload": "^1.0.5"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ]
  }
}
